<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Title Icon -->
    <link
      rel="shortcut icon"
      href="https://cdn-icons-png.flaticon.com/512/295/295128.png"
      type="image/x-icon"
    />

    <!-- Bootstrap Icon -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/stylesheets/register.css" />

    <title>Register</title>
  </head>

  <body>
    <div class="container">
      <div class="container-wrapper">
        <h3 class="login-text">
          <i class="bi bi-person-circle ac-logo"></i>Register
        </h3>

        <form
          action="/register"
          method="POST"
          class="row g-4 needs-validation"
          novalidate
        >
          <div class="item">
            <input
              name="User[username]"
              class="input form-control"
              type="text"
              placeholder="Name"
              required
            />
            <div class="valid-feedback">Nice Name</div>
          </div>

          <div class="item">
            <input
              name="User[phoneNumber]"
              class="input form-control"
              type="number"
              placeholder="Phone Number"
              required
            />
            <div class="valid-feedback">Great</div>
          </div>

          <div class="item">
            <input
              name="User[address]"
              class="input form-control"
              type="text"
              placeholder="Address"
              id="address"
              required
            />
            <div class="invalid-feedback">Entre Your Address</div>
          </div>

          <div class="item">
            <input
              name="User[email]"
              class="input form-control"
              type="email"
              aria-describedby="inputGroupPrepend"
              placeholder="Email"
              required
            />
            <div class="invalid-feedback">Please enter your college email</div>
          </div>

          <div class="item">
            <input
              name="User[password]"
              class="input form-control"
              type="password"
              placeholder="Password"
              required
            />
            <div class="invalid-feedback">
              Your password must be 8-15 characters long
            </div>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="invalidCheck"
              required
            />
            <label class="form-check-label" for="invalidCheck">
              Agree to terms and conditions
            </label>
            <div class="invalid-feedback TandC">
              You must agree before submitting
            </div>
          </div>

          <span class="remember"> <a href="/login">OR Sign In</a> </span>

          <div class="item submit">
            <button id="subBtn" type="submit">Submit</button>
          </div>

          <span class="remember"> <a href="/">HOME</a> </span>
        </form>
      </div>
    </div>

    <script src="/javascripts/saveAddress.js"></script>

    <!-- Custom JS -->
    <script src="/javascripts/validateForms.js"></script>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
